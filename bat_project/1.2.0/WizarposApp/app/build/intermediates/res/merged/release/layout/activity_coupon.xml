<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="top.linjia.wizarposapp.activities.CouponActivity">
    <RelativeLayout
        android:background="#E51312"
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:gravity="center_vertical">

        // 1.1 返回图标
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/coupon_top_back_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/common_top_back"
            android:layout_marginLeft="20dp"
            android:clickable="true"/>

        // 1.2 导航栏标题
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/coupon_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/giftCard_card"
            android:textSize="35px"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/giftCard_card"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorLine"
            android:layout_height="40dp"
            android:layout_width="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/giftCart_lastTime"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorLine"
            android:layout_height="40dp"
            android:layout_width="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/giftCart_status"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        >
        <LinearLayout
            android:id="@+id/coupon_loading_fail_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哎呀，出错啦！"/>
            <Button
                android:id="@+id/coupon_loading_fail_btn"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新加载"/>
        </LinearLayout>
        <TextView
            android:id="@+id/coupon_uncoupon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/uncoupon"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:visibility="gone"/>
        <ListView
            android:divider="@drawable/myorder_listview_divider"
            android:dividerHeight="1dp"
            android:id="@+id/coupon_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/coupon_rulecoupon"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/giftCart_rule"
        android:textSize="20dp"
        android:textColor="@color/yellow"
        android:background="#fee"/>
</LinearLayout>
