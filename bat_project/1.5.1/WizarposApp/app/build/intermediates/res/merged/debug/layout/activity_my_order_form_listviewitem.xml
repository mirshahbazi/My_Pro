<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemsize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/activity_my_order_form_ordernum"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="111111111111111"
            android:textSize="@dimen/textsize_3"/>
        <TextView
            android:id="@+id/activity_my_order_form_ordertime"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="111111111111111"
            android:textSize="@dimen/textsize_3"/>
        <TextView
            android:id="@+id/activity_my_order_form_ordermoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="222.00"
            android:gravity="center"
            android:textSize="@dimen/textsize_3"/>
        <TextView
            android:id="@+id/activity_my_order_form_orderstate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="已出库"
            android:textSize="@dimen/textsize_3"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/activity_my_order_form_wuliu"
                android:layout_width="98px"
                android:layout_height="38px"
                android:text="@string/common_checkLogistics"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/common_btn_backline"
                android:textSize="@dimen/textsize_3"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>