<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="top.linjia.wizarposapp.activities.SecondLevelTypeActivity">

    <fragment
        android:id="@+id/second_level_title_fragment"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        class="top.linjia.wizarposapp.view.fragment.TitleFragment"
    />
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/second_level_type_indicator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow_line"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/second_level_type_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
