<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20px"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/activity_submit_order_form_store_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/submitOrderForm_store"
            android:textSize="@dimen/textsize_3"
            />
        <TextView
            android:id="@+id/activity_submit_order_form_store"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="建军超市"
            android:textSize="@dimen/textsize_3"
            android:layout_marginLeft="760dp"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
           />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/submitActivity_textview_coupon"
            android:textSize="18sp"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/submitActivity_textview_coupon_ll"
            android:layout_weight="16"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            />
            <LinearLayout
                android:background="@color/submit_more_coupon_bg"
                android:id="@+id/submitActivity_textview_coupon_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/common_person_right"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginLeft="52px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="@string/submitActivity_textview_shopCoupon"/>

            <ImageView
                android:id="@+id/submit_activity_shop_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/submit_add_coupon_selecter"
                android:layout_marginLeft="10px"
                />
            <TextView
                android:id="@+id/show_shop_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:maxWidth="300dp"
                android:singleLine="true"
                android:textSize="22sp"
                android:text="(暂时无可用购物券)"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_2"
                android:text="@string/submitActivity_textview_offsetCoupon"/>
            <ImageView
                android:id="@+id/submit_activity_offset_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/submit_add_coupon_selecter"
                android:layout_marginLeft="10px"
                />

            <TextView
                android:id="@+id/show_offset_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:textSize="22sp"
                android:text="(暂时无可用抵用券)"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorLine"/>
    // 4 备注
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginLeft="52px">
        <TextView
            android:id="@+id/activity_submit_order_form_remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/submitOrderForm_remark"
            android:textSize="@dimen/textsize_2"
            />
        <EditText
            android:background="@null"
            android:id="@+id/activity_submit_order_form_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_2"
            android:layout_toRightOf="@+id/activity_submit_order_form_remark_text" />
    </RelativeLayout>
</LinearLayout>