<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5px"
    android:paddingBottom="5px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/commit_orderform_item_name"
        android:layout_marginLeft="100px"
        android:layout_width="330px"
        android:layout_marginRight="20px"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:singleLine="true"
        android:text="@string/common_name"/>
    <TextView
        android:id="@+id/commit_orderform_item_standard"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:text="@string/common_standard"/>
    <TextView
        android:id="@+id/commit_orderform_item_price"
        android:layout_width="180px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/common_unitPrice"/>
    <TextView
        android:id="@+id/commit_orderform_item_number"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/cart_orderForm_title_number"/>
</LinearLayout>
