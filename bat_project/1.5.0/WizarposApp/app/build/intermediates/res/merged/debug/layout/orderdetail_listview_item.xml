<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="750dp"
    android:layout_height="80dp">
    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/orderdetails_listview_item_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="60dp"
        android:text="名称"
        />
    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/orderdetails_listview_item_stname"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="60dp"
        android:text="名称"
        />
    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/orderdetails_listview_item_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:text="名称"
        />
    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/orderdetails_listview_item_num"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:text="名称"
        />
</LinearLayout>