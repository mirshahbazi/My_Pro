<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="80dp"
    android:paddingLeft="20dp"
    android:gravity="center_vertical">
        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/order_listview_item_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:text="mingcheng"/>
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/order_listview_item_stname"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="60dp"
        android:text="mingcheng"/>
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/order_listview_item_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:text="mingcheng"/>
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/order_listview_item_num"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:text="mingcheng"/>
    <ImageView
        android:src="@drawable/dustbin"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/order_listview_item_delete"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:text="mingcheng"/>
</LinearLayout>