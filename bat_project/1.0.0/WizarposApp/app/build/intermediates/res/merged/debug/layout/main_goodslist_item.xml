<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/main_goodsitem_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="农夫山泉有点甜，哈哈哈"
            android:textSize="25sp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/main_goodsitem_stname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:singleLine="true"
            android:text="箱/500ml * 25瓶"
            android:textColor="@color/line"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/main_goodsitem_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="25.00"
        android:textSize="25sp"
        android:textColor="@color/yellow"/>
    <TextView
        android:id="@+id/main_goodsitem_store"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="10"
        android:singleLine="true"
        android:textSize="25sp"/>
    <LinearLayout
        android:id="@+id/main_goodsitem_click"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/main_goodsitem_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/goodsnum"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_goodsitem_afterclick"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/main_goodsitem_reduce"
                android:background="@mipmap/goodsnum_reduce"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"/>
            <TextView
                android:textSize="24sp"
                android:id="@+id/main_goodsitem_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/main_goodsitem_add"
                android:background="@mipmap/goodsnum_plus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起订："
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/main_goodsitem_moq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="1"
                android:gravity="center"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限订："
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/main_goodsitem_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>