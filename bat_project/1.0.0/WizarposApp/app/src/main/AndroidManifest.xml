<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1.1.1"
    android:versionName="1.0"
    package="top.linjia.wizarposapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".global.WizarPosApp"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/linjia"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activities.PersonActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.ClassifyActivity" />
        <activity android:name=".activities.GoodsDetailsActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.OrderFormDetailActivity" />
        <activity android:name=".activities.PayDetailsActivity" />
        <activity android:name=".activities.SubmitOrderFormActivity" />
        <activity android:name=".activities.MyOrderFormActivity" />
        <activity android:name=".activities.GiftCardActivity" />
        <activity android:name="com.wizarpos.barcode.scanner.ScannerActivity" />
        <activity android:name=".activities.PayStateActivity" />
        <activity android:name=".activities.PayResultActivity" />
        <activity android:name=".activities.CouponActivity" />
        <activity android:name=".activities.PersonAddressActivity"></activity>
    </application>

</manifest>