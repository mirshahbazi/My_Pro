<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/linjia_coins_total"
        android:layout_marginLeft="26dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:text="@string/linjia_coins_balance"
        android:gravity="center"/>
    <TextView
        android:id="@+id/linjia_coins_useable"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/linjia_coins_use"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginLeft="560dp"/>
    <Button
        android:id="@+id/submit_userinfo_list_linjia_coins_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/submit_userinfo_list_linjia_coins_btn"
        />
</LinearLayout>