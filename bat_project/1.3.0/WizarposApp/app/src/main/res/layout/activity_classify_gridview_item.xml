<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center">
        // 1、商品图标
        <FrameLayout
            android:id="@+id/activity_classify_gridview_item_iv_fl"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="13dp">
            <ImageView
                android:id="@+id/activity_classify_gridview_item_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/dustbin"
                android:background="@color/colorImgBack"/>
            <ImageView
                android:id="@+id/activity_classify_gridview_item_iv_soldout"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/sold_out"
                />
        </FrameLayout>

        // 2 商品名字和价格
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="18dp">
            <TextView
                android:id="@+id/activity_classify_gridview_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/activity_classify_gridview_item_stname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_classify_gridview_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:text="￥ 200.00"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/activity_classify_gridview_item_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/activity_classify_gridview_item_storetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_goods_store"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/activity_classify_gridview_item_store"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_classify_gridview_item_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/activity_classify_gridview_item_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/goodsnum"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_classify_gridview_item_cart_ll"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/activity_classify_gridview_item_reduce"
                    android:background="@mipmap/goodsnum_reduce"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"/>
                <TextView
                    android:textSize="30sp"
                    android:id="@+id/activity_classify_gridview_item_num"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/activity_classify_gridview_item_plus"
                    android:background="@mipmap/goodsnum_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/activity_classify_gridview_item_lastnum_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起订："
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/activity_classify_gridview_item_lastnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="1"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/activity_classify_gridview_item_praise_tag"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限订："
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/activity_classify_gridview_item_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="1"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_gravity="end"
        />
</LinearLayout>