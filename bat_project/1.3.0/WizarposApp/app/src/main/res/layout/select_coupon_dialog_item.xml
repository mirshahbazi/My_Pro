<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/select_coupon_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/select_yes"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/select_coupon_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/select_coupon_dialog_name"
            android:textSize="26sp"
            android:paddingRight="30dp"
            />

        <TextView
            android:id="@+id/select_coupon_rule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/select_coupon_dialog_rule"
            android:textSize="26sp"
            android:textColor="#f47131"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/select_coupon_date"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical"
            android:text="@string/select_coupon_dialog_date"
            android:textSize="26sp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/select_coupon_not_usable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B000"
        android:gravity="center"
        android:text="@string/select_coupon_dialog_listitem_not_usable"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:typeface="normal"
        />
</FrameLayout>