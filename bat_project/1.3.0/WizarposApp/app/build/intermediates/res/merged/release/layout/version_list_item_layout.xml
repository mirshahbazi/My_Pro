<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="22dp"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/version_listview_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="版本信息："
        />
    <TextView
        android:id="@+id/version_listview_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="\tKotlin 是一个基于 JVM 的新的编程语言，由 JetBrains 开发。Kotlin可以编译成Java字节码，也可以编译成JavaScript，方便在没有JVM的设备上运行。JetBrains，作为目前广受欢迎... "
        />

</LinearLayout>