<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="top.linjia.wizarposapp.activities.CouponActivity">
    <RelativeLayout
        android:background="#E51312"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:gravity="center_vertical">

        // 1.1 返回图标
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/choice_coupon_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/common_top_back"
            android:layout_marginLeft="20dp"
            android:clickable="true"/>

        // 1.2 导航栏标题
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choice_coupon"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="24dp"
                            android:text="@string/activity_coupon_show_nearoutdata"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/activity_coupon_show_nocoupon_nearoutdata"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/activity_coupon_show_nocoupon"
                            android:textSize="24dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupon_grid_nearoutable_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <top.linjia.wizarposapp.customs.MyGridView
                            android:id="@+id/activity_grid_nearoutdata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="6"
                            android:verticalSpacing="10dp"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="24dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:text="@string/activity_coupon_show_useable"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/activity_coupon_show_nocoupon_useble"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_coupon_show_nocoupon"
                        android:textSize="24dp"
                        android:visibility="gone"/>
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/coupon_grid_useable_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <top.linjia.wizarposapp.customs.MyGridView
                            android:id="@+id/activity_grid_useable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:verticalSpacing="10dp"
                            android:numColumns="6"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="24dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:text="@string/activity_coupon_show_cantuse"
                        android:gravity="center_vertical"
                        android:id="@+id/textView" />

                    <TextView
                        android:id="@+id/activity_coupon_show_nocoupon_cantuse"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_coupon_show_nocoupon"
                        android:textSize="24dp"
                        android:visibility="gone"/>
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/coupon_grid_cantuse_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <top.linjia.wizarposapp.customs.MyGridView
                            android:id="@+id/activity_grid_cantuse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:verticalSpacing="10dp"
                            android:numColumns="6"
                            />
                    </LinearLayout>
                </LinearLayout>


            </ScrollView>
</LinearLayout>
