<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44px"
    >

    <TextView
    android:layout_centerVertical="true"
    android:id="@+id/activity_orderform_detail_listview_goodsname"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="商品名称"/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/activity_orderform_detail_listitem_standard"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="规格"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/activity_orderform_detail_listview_goodsname"
        android:layout_toEndOf="@+id/activity_orderform_detail_listview_goodsname"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/activity_orderform_detail_listview_unitprice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="单价"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/activity_orderform_detail_listitem_standard"
        android:layout_toEndOf="@+id/activity_orderform_detail_listitem_standard"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/activity_orderform_detail_listview_goodsnum"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="数量"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/activity_orderform_detail_listview_unitprice"
        android:layout_toEndOf="@+id/activity_orderform_detail_listview_unitprice"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

</RelativeLayout>